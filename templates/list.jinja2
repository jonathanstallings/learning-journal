{% extends "base.jinja2" %}
{% block body %}
{% if request.authenticated_userid %}
  <aside>
  <form action="{{ request.route_url('add') }}" method="POST" class="add_entry">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" size="30" name="title" id="title"/>
    </div>
    <div class="field">
      <label for="text">Text</label>
      <textarea name="text" id="text" rows="5" cols="80"></textarea>
    </div>
    <div class="control_row">
      <input type="submit" value="Share" name="Share"/>
    </div>
  </form>
  </aside>
    <section id="new-entry">
      <div class="container">
        <h3>Add Entry</h3>
        <ul>
          <li><a href="{{ request.route_url('create') }}">New Entry</a></li>
        </ul>
      </div>
    </section>
{% endif %}
  <section id="entry-list">
    <div class="container">
      <h3>Journal Entries</h3>
      <ul>
        {% for entry in entries %}
        <li><a href="{{ request.route_url('detail', entry_id='{{ entry.id }}') }}" id="entry={{ entry.id }}" class="entry-link">{{ entry.title }}</a>{{ entry.text }}<span class="date">{{ entry.created.strftime('%b. %d, %Y') }}</span></li>
        {% else %}
        <li>
          <p><em>No entries here so far</em></p>
        </li>
        {% endfor %}
      </ul>
    </div>
  </section>
{% endblock %}
