{% extends "base.jinja2" %}
{% block body %}
  <section id="entry-create">
    <div class="container">
      <h3>New Entry</h3>
      <form action="{{ request.route_url('add') }}" method="post">
        <ul>
          <li>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="" size="30" maxlength="60" required autofocus/>
          </li>
          <li>
            <label for="text">Text</label>
            <textarea name="text" id="text" cols="60" rows="20" required></textarea>
          </li>
          <li>
            <div id="form-buttons">
              <input type="submit" id="save-button"  class="button" value="Save" />
              <a class="button" href="/">Cancel</a>
            </div>
          </li>
        </ul>
      </form>
    </div>
  </section>
{% endblock %}
